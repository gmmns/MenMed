<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.pda.clemente.laura.menmed.MenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/menu_grid"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_light">

            <ImageButton
                android:src="@mipmap/ic_launcher"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_share"
                android:layout_weight="1" />

            <TextView
                android:text="MENÚ DEL DIA"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/menu_title"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:text="B"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_esb" />

            <Button
                android:text="C"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_compr" />
        </LinearLayout>

        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/calendarView3" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:text="Esmorzar"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/esm_title"
                        android:textSize="20dp"
                        android:clickable="false" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <Space
                            android:layout_height="match_parent"
                            android:layout_width="20dp" />

                        <CheckBox
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:id="@+id/esm_check" />

                        <TextView
                            android:text="Àpat esmorzar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/esm_recept"
                            android:layout_weight="1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="100dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <TextView
                        android:text="Mig Matí"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mig_title"
                        android:textSize="20dp"
                        android:clickable="false" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <Space
                            android:layout_height="match_parent"
                            android:layout_width="20dp" />

                        <CheckBox
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:id="@+id/mig_check" />

                        <TextView
                            android:text="Àpat mig matí"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mig_recept"
                            android:layout_weight="1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="100dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <TextView
                        android:text="Dinar"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/dinar_title"
                        android:textSize="20dp"
                        android:clickable="false" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <Space
                            android:layout_height="match_parent"
                            android:layout_width="20dp" />

                        <CheckBox
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:id="@+id/dinar_check1" />

                        <TextView
                            android:text="Primer plat dinar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dinar_recept1"
                            android:layout_weight="1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="100dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <Space
                            android:layout_height="match_parent"
                            android:layout_width="20dp" />

                        <CheckBox
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:id="@+id/dinar_check2" />

                        <TextView
                            android:text="Segon plat dinar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dinar_recept2"
                            android:layout_weight="1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="100dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <Space
                            android:layout_height="match_parent"
                            android:layout_width="20dp" />

                        <CheckBox
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:id="@+id/dinar_check3" />

                        <TextView
                            android:text="Postres dinar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dinar_recept3"
                            android:layout_weight="1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="100dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <TextView
                        android:text="Berenar"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ber_title"
                        android:textSize="20dp"
                        android:clickable="false" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <Space
                            android:layout_height="match_parent"
                            android:layout_width="20dp" />

                        <CheckBox
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:id="@+id/ber_check" />

                        <TextView
                            android:text="Àpat berenar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ber_recept"
                            android:layout_weight="1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="100dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <TextView
                        android:text="Sopar"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sopar_title"
                        android:textSize="20dp"
                        android:clickable="false" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <Space
                            android:layout_height="match_parent"
                            android:layout_width="20dp" />

                        <CheckBox
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:id="@+id/sopar_check1" />

                        <TextView
                            android:text="Primer plat sopar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sopar_recept1"
                            android:layout_weight="1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="100dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <Space
                            android:layout_height="match_parent"
                            android:layout_width="20dp" />

                        <CheckBox
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:id="@+id/sopar_check2" />

                        <TextView
                            android:text="Segon plat sopar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sopar_recept2"
                            android:layout_weight="1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="100dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <Space
                            android:layout_height="match_parent"
                            android:layout_width="20dp" />

                        <CheckBox
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:id="@+id/sopar_check3" />

                        <TextView
                            android:text="Postres sopar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sopar_recept3"
                            android:layout_weight="1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="100dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/change_act"
            android:layout_alignParentBottom="true"
            android:background="@android:color/holo_blue_light">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:text="List"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_list" />

            <Button
                android:text="Menu"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_menu" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
